<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9">
    <%= image_tag(@testpage.picture_url, width: '100%') if @testpage.picture.present? %>
    <h3>Comments</h3>
    <% @comments.each do |comment| %>
      <div>
        <strong><%= comment.user_name %></strong>
        <br />
        <p><%= comment.body %></p>
        <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
    <%= render 'comments/form' %>
  </div>

      <div class="col-md-3">
    <p><b>Name: </b><%= @testpage.name %></p>
    <p><b>Description: </b><%= @testpage.description %></p>
    <p>
      <%= link_to 'Edit', edit_testpage_path(@testpage), class: "btn btn-success"%> |
      <%= link_to 'Destroy', @testpage, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger" %> |
      <%= link_to 'Back', testpages_path, class: "btn btn-warning" %>
    </p>
  </div>
</div>
